"hi Comment ctermfg =green
"hi String ctermfg =darkred
"hi Type ctermfg =yellow
"hi Statement ctermfg =darkyellow
colorscheme desert

set ts=4

"空格替换为TAB
set noexpandtab

"只处理行首TAB键
:%retab

set nu
filetype on
set background=dark
"语法高亮
syntax on
"对齐
set autoindent
set smartindent

set tabstop=4
set shiftwidth=4

"设置匹配模式
set showmatch

"智能查找
set incsearch



